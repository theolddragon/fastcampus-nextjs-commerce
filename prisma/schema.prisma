// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id   Int      @id @default(autoincrement())
  name String
}

model products {
  id          Int     @id @default(autoincrement())
  name        String
  image_url   String?
  price       Int @default(20000)
  category_id Int 
  createdAt   DateTime @default(now())
  contents    String?

  @@index([category_id])
}